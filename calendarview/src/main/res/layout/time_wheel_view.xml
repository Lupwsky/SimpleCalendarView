<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        
        <com.lupw.calendarview.view_wheel.StringScrollPicker
            android:id="@+id/hourView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:spv_min_text_size="13sp"
            app:spv_max_text_size="13sp"
            app:spv_center_item_background="#22888888"
            app:spv_start_color="@color/colorBlackText"
            app:spv_end_color="@color/colorLightGrayText"/>
        
        <com.lupw.calendarview.view_wheel.StringScrollPicker
            android:id="@+id/minView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:spv_min_text_size="13sp"
            app:spv_max_text_size="13sp"
            app:spv_center_item_background="#22888888"
            app:spv_start_color="@color/colorBlackText"
            app:spv_end_color="@color/colorLightGrayText"/>
        
        <com.lupw.calendarview.view_wheel.StringScrollPicker
            android:id="@+id/secView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:spv_min_text_size="13sp"
            app:spv_max_text_size="13sp"
            app:spv_center_item_background="#22888888"
            app:spv_start_color="@color/colorBlackText"
            app:spv_end_color="@color/colorLightGrayText"/>
    </LinearLayout>
</LinearLayout>
