<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@android:color/white">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:id="@+id/llPre"
            android:layout_width="80dp"
            
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:contentDescription="@null"
                android:background="@drawable/icon_left"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/llYearMoth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/llPre"
            android:layout_toLeftOf="@+id/llNext"
            android:layout_toEndOf="@+id/llPre"
            android:layout_toStartOf="@+id/llNext"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:contentDescription="@null"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/icon_calendar"/>
            
            <TextView
                android:id="@+id/txtYearMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/colorDateText"
                android:text="----年--月"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/llNext"
            android:layout_width="80dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end">
            <ImageView
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@null"
                android:background="@drawable/icon_right"/>
        </LinearLayout>
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGrayLine"/>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.lupw.calendarview.view.CalendarViewDayPager
            android:id="@+id/calendarViewPager"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:background="@android:color/white"/>
        
        <com.lupw.calendarview.view.CalendarViewMonthPager
            android:visibility="gone"
            android:id="@+id/calendarViewMonthPager"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/white"/>
    </RelativeLayout>
</LinearLayout>